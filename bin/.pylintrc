[basic]
good-names = ct, i, mx, k, a, b, u, v, bx, xs, j, m, s, t, n, w
max-locals = 50
max-args = 10
max-attributes = 10
max-line-length = 120
max-branches = 20 
max-public-methods=50
max-statements = 70 
max-module-lines = 1500
max-bool-expr = 7
 
